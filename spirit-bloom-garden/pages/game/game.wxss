/* pages/game/game.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20rpx;
  height: 100vh;
  box-sizing: border-box;
}

.game-board {
  display: flex; 
  flex-direction: column;
  gap: 5px; 
  margin-top: 20px;
  border: 1px solid #ccc; 
}

.board-row {
  display: flex; 
  flex-direction: row;
  gap: 5px; 
}

.plot {
  width: 120rpx; 
  height: 120rpx;
  background-color: #e8f5e9; 
  border: 2px solid #c8e6c9; /* Default border */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box; 
  position: relative; 
  transition: border-color 0.2s ease-in-out; /* Smooth transition for selection */
}

.plot.selected {
  border-color: #4CAF50; /* Green border for selected items */
  box-shadow: 0 0 10rpx #4CAF50; /* Optional: add a glow */
}

.plot image.flower-image {
  width: 90rpx; /* Slightly smaller to fit border and tier text */
  height: 90rpx;
}

.tier-text { /* Renamed from .plot text for clarity */
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  font-size: 20rpx;
  background-color: rgba(0,0,0,0.6);
  color: white;
  padding: 2rpx 6rpx;
  border-radius: 5rpx;
}

.energy-display {
  margin-top: 30rpx;
  font-size: 36rpx; 
  color: #2e7d32; 
  font-weight: bold;
}
